<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Spinner
        android:id="@+id/gesture_spinner"
        android:layout_width="390dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="139dp"
        android:entries="@array/gesture_array"
        android:gravity="center" />

    <Button
        android:id="@+id/select_gesture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gesture_spinner"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="15dp"
        android:text="Select Gesture" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="0dp"
        android:ellipsize="none"
        android:ems="10"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text="SmartHome Gesture Control Application Project Part 1"
        android:textDirection="firstStrongRtl"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="89dp"
        android:gravity="center"
        android:text="Select a gesture from the drop-down menu, then press 'SELECT GESTURE'."
        android:textColor="#000000" />

</RelativeLayout>
